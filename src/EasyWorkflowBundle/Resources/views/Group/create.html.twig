{% extends "@EasyWorkflow/base.html.twig" %}
{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <form action="{{ path('group_create') }}" method="post">
                <div class="form-group">
                    <label for="groupName"><span class="text-danger">*</span> 群组名称</label>
                    <input type="text" name="groupName" class="form-control" id="groupName" placeholder="群组名称">
                </div>
                <div class="form-group">
                    <label for="roles">角色</label>
                    <div class="input-group">
                        {% for role_key,role in roles %}
                            <label class="checkbox-inline">
                                <input type="checkbox" name="roles[]" value="{{ role_key }}"> {{ role }}
                            </label>
                        {% endfor %}
                    </div>
                </div>
                <div class="form-group">
                    <label for="remark">备注</label>
                    <textarea name="remark" id="remark" cols="30" rows="8" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">提交</button>
            </form>
        </div>
    </div>
{% endblock %}
