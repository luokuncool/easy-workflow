{% extends "@EasyWorkflow/base.html.twig" %}
{% block body %}
    {{ parent() }}
    <div class="container">
        {% for error in app.session.flashBag.get('error') %}
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                            aria-hidden="true">&times;</span></button>
                {{ error|trans }}
            </div>
        {% endfor %}
        <div class="col-md-6 col-md-offset-3">
            <form action="{{ path('group_edit', {id : group.id}) }}" method="post">
                <div class="form-group">
                    <label for="groupName"><span class="text-danger">*</span> 群组名称</label>
                    <input type="text" name="groupName" class="form-control" id="groupName" placeholder="群组名称"
                           value="{% if group %}{{ group.groupName }}{% endif %}" required>
                </div>
                <div class="form-group">
                    <label for="roles">角色</label>
                    <div class="input-group">
                        {% for role_key,role in roles %}
                            <label class="checkbox-inline">
                                {% if role_key in group.roleKeys %}
                                    <input type="checkbox" name="roles[{{ role_key }}]" value="{{ role }}" checked/> {{ role }}
                                {% else %}
                                    <input type="checkbox" name="roles[{{ role_key }}]" value="{{ role }}"/> {{ role }}
                                {% endif %}
                            </label>
                        {% endfor %}
                    </div>
                </div>
                <div class="form-group">
                    <label for="remark">备注</label>
                    <textarea name="remark" id="remark" cols="30" rows="8" class="form-control">{{ group.remark }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">提交</button>
            </form>
        </div>
    </div>
{% endblock %}