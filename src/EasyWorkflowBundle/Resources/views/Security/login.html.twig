<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% stylesheets filter="scssphp" output="bundles/easyworkflow/output/all.css"
    "bundles/easyworkflow/scss/_bootstrap.scss"
    "bundles/easyworkflow/scss/_easy-workflow.scss"
    "bundles/easyworkflow/css/bootstrap-datetimepicker.min.css" %}
    <link rel="stylesheet" href="{{ asset_url }}"/>
    {% endstylesheets %}
</head>
<body>
<div class="container">
    <div class="col-md-6 col-md-offset-3 easy-workflow-mt">
        <div class="panel panel-default">
            <div class="panel-heading">登录系统</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        {% if error %}
                            <div class="alert alert-danger alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                                            aria-hidden="true">&times;</span></button>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <form action="{{ path('security_login_check') }}" method="post">
                    <div class="form-group">
                        <label for="username"><span class="text-danger">*</span> 用户名</label>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}" required/>
                    </div>
                    <div class="form-group">
                        <label for="password"><span class="text-danger">*</span>密码</label>
                        <input class="form-control" type="password" id="password" name="_password" required/>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button type="submit" class="btn btn-primary">登录<i class="glyphicon glyphicon-hand-up"></i></button>
                </form>
            </div>
        </div>
    </div>
</div>
{% javascripts filter="?uglifyjs"
"bundles/easyworkflow/js/jquery.min.js"
"bundles/easyworkflow/js/bootstrap.min.js"
"bundles/easyworkflow/js/bootstrap-datetimepicker.min.js"
"bundles/easyworkflow/js/locales/bootstrap-datetimepicker.zh-CN.js" %}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
</body>
</html>