{% extends "@EasyWorkflow/base.html.twig" %}
{% block body %}
    <div class="container">
        <div class="col-md-8">
            <form>
                <div class="form-group">
                    <label for="leaveType">请假类型</label>
                    <select class="form-control" name="leaveType" id="leaveType">
                        <option value="">--请选择--</option>
                        <option value="1">事假</option>
                        <option value="2">病假</option>
                        <option value="3">年假</option>
                    </select>
                </div>
                <div class="row">
                    <div class="col-md-6 form-group">
                        <label for="startTime" class="control-label">开始时间</label>
                        <div class="input-group date form_datetime" data-date="{{ 'now'|date('Y-m-d H:i:00') }}"
                             data-date-format="yyyy-mm-dd hh:ii:00" data-link-field="startTime">
                            <input class="form-control" type="text" name="startTime"
                                   value="{{ 'now'|date('Y-m-d H:i:s') }}"/>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        </div>
                    </div>
                    <div class="col-md-6 form-group">
                        <label for="endTime" class="control-label">结束时间</label>
                        <div class="input-group date form_datetime" data-date="{{ 'now'|date('Y-m-d H:i:00') }}"
                             data-date-format="yyyy-mm-dd hh:ii:00" data-link-field="endTime">
                            <input class="form-control" type="text" name="endTime"
                                   value="{{ 'now'|date('Y-m-d H:i:s') }}"/>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="nextHandlerName">下一处理人</label>
                    <input type="text" class="form-control" id="nextHandlerName" placeholder="下一处理人">
                </div>
                <div class="form-group">
                    <select class="form-control" name="nextHandler" id="nextHandler" size="10">
                        <option value="2">abc</option>
                        <option value="2">cbd</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">提交</button>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
    $('.form_datetime').datetimepicker({
        language: 'zh-CN',
        weekStart: 1,
        todayBtn: 1,
        autoclose: 1,
        todayHighlight: 1,
        startView: 2,
        forceParse: 0,
        showMeridian: 1
    });
    </script>
{% endblock %}
