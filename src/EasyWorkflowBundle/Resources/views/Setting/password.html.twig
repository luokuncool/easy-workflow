{% extends "@EasyWorkflow/base.html.twig" %}
{% block content %}
    <!-- content -->
    <div class="col-md-10">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>系统设置</h1>
                </div>
            </div>
        </div>
        {% include '@EasyWorkflow/_flash_messages.html.twig' %}
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="text-muted bootstrap-admin-box-title">修改密码</div>
                    </div>
                    <div class="bootstrap-admin-panel-content text-muted" style="padding: 60px 0;">
                        <div class="row">
                            <div class="col-md-6 col-md-offset-3">
                                <form action="{{ path('easyworkflow_setting_password') }}" method="post">
                                    <div class="form-group">
                                        <label for="oldPassword"><span class="text-danger">*</span> 旧密码</label>
                                        <input type="password" name="oldPassword" class="form-control" id="oldPassword"
                                               placeholder="旧密码"
                                               value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="password"><span class="text-danger">*</span> 新密码</label>
                                        <input type="password" name="password" class="form-control" id="password"
                                               placeholder="新密码"
                                               value="">
                                    </div>
                                    <div class="form-group">
                                        <label for="confirm"><span class="text-danger">*</span> 确认密码</label>
                                        <input type="password" name="confirm" class="form-control" id="confirm"
                                               placeholder="确认密码"
                                               value="">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-sm"><i
                                                class="glyphicon glyphicon-hand-up"></i> 确定提交
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}